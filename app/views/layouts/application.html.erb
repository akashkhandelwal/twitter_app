<!DOCTYPE html>
<html>
<head>
  <title>QwinixAssignment</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="user_nav">
	  <% if current_user %>
	    Logged in as <%= link_to current_user.name, username_path(current_user) %>.
	    <%= link_to "Log out", sign_out_path %>
	  <% else %>
	    <%= link_to "Sign up", sign_up_path %> or
	    <%= link_to "Sign in", sign_in_path %>
	  <% end %>
	</div>
	<% if !flash.empty? %>
		<div id="flash"> 
		    <% flash.keys.each do |k| %> 
		        <div class="<%= k %>">
		            <%= flash[k] %>
		        </div>  
		    <% end %>   
		</div>
	<% end %>
	
	<%= yield %>

</body>
</html>
