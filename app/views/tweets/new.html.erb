<div style="border:1px solid black;padding: 20px;width:400px;">
  <%= form_for tweet do |f| %>
  	<%= render 'shared/error_messages', object: f.object %>

    <p>
    	<%= f.label "Create Tweet" %><br />
      <%= f.text_area :body, :cols => 50, :rows => 3 %>
    </p>

    <p>
    	<%= f.check_box :private %>
    	<%= f.label :private %>
    </p>

    <p class="button"><%= f.submit %></p>

  <% end %>
</div>